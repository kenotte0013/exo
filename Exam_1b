void lecture(ouv1.Nom, ouv1.Prenom, ouv1.ID, ouv1.Date.Jour, ouv1.Date.Mois, ouv1.Date.Annee)
  {
	  printf("Nom :%s  Prenom :%s n°%d né(e) le :%d/%d/%d", ouv1.Nom, ouv1.Prenom, 
	        ouv1.ID, ouv1.Date.Jour, ouv1.Date.Mois, ouv1.Date.Annee);
  }
void ecriture(ouv1.Nom, ouv1.Prenom, ouv1.ID, ouv1.Date.Jour, ouv1.Date.Mois, ouv1.Date.Annee)
  {
    printf("Entrer le Prenom Nom date de naissance (jj/mm/aaaa) et le numero de l'ouvrier\n");
